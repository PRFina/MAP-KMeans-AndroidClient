<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="server_address"
        android:title="Server Address"
        android:dialogMessage="Insert ip address"
        android:defaultValue="10.0.2.2" />

    <EditTextPreference
        android:key="server_port"
        android:title="Server Port"
        android:dialogMessage="Insert port number"
        android:defaultValue="9999" />


</PreferenceScreen>